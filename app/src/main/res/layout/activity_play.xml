<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.shadowsoft.tictactoe.Play"
    android:gravity="center_vertical|center_horizontal">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout">

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/b1"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="50dp"
            android:onClick="buttonOnClick1"
            android:nestedScrollingEnabled="false" />

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/b2"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="50dp"
            android:onClick="buttonOnClick2" />

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/b3"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="50dp"
            android:onClick="buttonOnClick3" />

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/b4"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="50dp"
            android:onClick="buttonOnClick4" />

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/b5"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="50dp"
            android:onClick="buttonOnClick5" />

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/b6"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="50dp"
            android:onClick="buttonOnClick6" />

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/b7"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="50dp"
            android:onClick="buttonOnClick7" />

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/b8"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="50dp"
            android:nestedScrollingEnabled="false"
            android:onClick="buttonOnClick8" />

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/b9"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="50dp"
            android:onClick="buttonOnClick9" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Undo"
            android:id="@+id/undo"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:textSize="20dp"
            android:onClick="undo" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="New Game"
            android:id="@+id/button10"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:textSize="20dp"
            android:gravity="center"
            android:onClick="NewGame" />

    </GridLayout>

</RelativeLayout>
